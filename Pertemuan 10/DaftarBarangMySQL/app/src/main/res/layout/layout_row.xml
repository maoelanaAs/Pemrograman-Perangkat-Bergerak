<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="5dp"
    android:layout_marginHorizontal="5dp"
    app:cardCornerRadius="5dp"
    app:cardElevation="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:padding="5dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3.2"
            android:orientation="vertical">

            <TextView
                android:id="@+id/kodeBrgTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kode Brg \t: " />

            <TextView
                android:id="@+id/namaBrgTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nama Brg\t: " />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2.8"
            android:orientation="vertical">

            <TextView
                android:id="@+id/hrgBeliTV"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Hrg Beli \t: " />

            <TextView
                android:id="@+id/hrgJualTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hrg Jual\t: " />
        </LinearLayout>

        <TextView
            android:id="@+id/stokBrgTV"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.3"
            android:text="Stok\n"
            android:textAlignment="center" />

    </LinearLayout>

</androidx.cardview.widget.CardView>