<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.learning.luaskeliling">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.LuasKeliling"
        tools:targetApi="31">

        <!-- Main Activity -->
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Persegi Activity -->
        <activity
            android:name=".PersegiActivity"
            android:exported="false"
            android:label="@string/app_name2"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name=".support.PARENT_ACTIVITY"
                android:value="com.learning.luaskeliling.MainActivity" />
        </activity>

        <!-- Segitiga Activity -->
        <activity
            android:name=".SegitigaActivity"
            android:exported="false"
            android:label="@string/app_name3"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name=".support.PARENT_ACTIVITY"
                android:value="com.learning.luaskeliling.MainActivity" />
        </activity>

        <!-- Lingkaran Activity -->
        <activity
            android:name=".LingkaranActivity"
            android:exported="false"
            android:label="@string/app_name4"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name=".support.PARENT_ACTIVITY"
                android:value="com.learning.luaskeliling.MainActivity" />
        </activity>

        <!-- Kubus Activity -->
        <activity
            android:name=".KubusActivity"
            android:exported="false"
            android:label="@string/app_name5"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name=".support.PARENT_ACTIVITY"
                android:value="com.learning.luaskeliling.MainActivity" />
        </activity>
    </application>

</manifest>