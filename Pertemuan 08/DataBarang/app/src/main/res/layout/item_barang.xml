<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="5dp"
        android:padding="7dp"
        app:cardElevation="3dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="5dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/kodeBrg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Kode Brg \t: " />

                <TextView
                    android:id="@+id/namaBrg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nama Brg\t: " />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/hrgBeli"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Hrg Beli \t: " />

                <TextView
                    android:id="@+id/hrgJual"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Hrg Jual\t: 5000" />
            </LinearLayout>

            <TextView
                android:id="@+id/stokBrg"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.3"
                android:text="Stok\n50"
                android:textAlignment="center" />

            <ImageView
                android:id="@+id/btnMore"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:src="@drawable/ic_more" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
